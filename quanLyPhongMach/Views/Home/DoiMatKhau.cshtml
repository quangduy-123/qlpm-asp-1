@model quanLyPhongMach.Models.NhanVien
@{
    ViewBag.Title = "Đổi Mật Khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Assets/CSS/Home.css")
    @Styles.Render("~/Assets/CSS/tableandbutton.css")
}

<style>
    .mg-2ss {
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 10px;
        width: 450px;
        color: black;
        border: 1px solid #333;
        border-radius: 6px;
        padding: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    .ml {
        display: flex;
        gap: 10px;
        justify-content: space-between
    }

   

    .btn_class a {
        text-decoration: none;
        color: white;
    }

    .form-group {
        width: 410px;
        display: flex;
        justify-content: space-between;
    }

    input#oldPassword, input#newPassword, input#confirmPassword {
        width: 200px;
    }

    .btn-primary1 {
        width: auto;
        margin: 0 auto;
    }

    /*Popup*/
    .popup {
        width: 400px;
        background: #fff;
        border-radius: 6px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        text-align: center;
        padding: 0 30px 30px;
        color: #333;
        border: 0.5px solid #333;
        display: none;
    }



        .popup img {
            width: 100px;
            margin-top: -50px;
            border-radius: 50%;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        .popup h2 {
            font-size: 38px;
            font-weight: 500;
            margin: 30px 0 10px;
        }

        .popup #btn_btn {
            width: 100%;
            margin-top: 50px;
            padding: 10px 0;
            background: #6fd649;
            color: #fff;
            border: 0;
            outline: none;
            font-size: 18px;
            border-radius: 4px;
            cursor: pointer;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }
</style>

@{
    ViewBag.Title = "Đổi Mật Khẩu";
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-info" role="alert">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm("DoiMatKhau", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="mg-2ss">
        <h4 style="font-size:22px">Đổi Mật Khẩu</h4>
        <div class="form-group">
            <p>Mật Khẩu Cũ :</p>
            @Html.Password("oldPassword", null, new { @class = "form-control" })

        </div>

        <div class="form-group">
            <p>Mật Khẩu Mới :</p>
            @Html.Password("newPassword", null, new { @class = "form-control" })

        </div>

        <div class="form-group">
            @Html.Label("XN mật khẩu", htmlAttributes: new { @class = "control-label" })
            @Html.Password("confirmPassword", null, new { @class = "form-control" })

        </div>
        <div class="text-danger1">
            @Html.ValidationMessage("oldPassword", "", new { @class = "text-danger" })
            @Html.ValidationMessage("confirmPassword", "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.MatKhauTC, "", new { @class = "text-danger" })

        </div>

        <div class="btn-primary1">
            <button type="submit" class="btn btn_class btn-primary">Đổi Mật Khẩu</button>
        </div>

    </div>
}



@*Thông Báo*@
<div class="popup" id="popup">
    <img src="~/Assets/IMGS/404-tick.png" alt="tich-xm" />
    <h2>Cảm Ơn</h2>
    <p>Bạn Đã Đổi Mật Khẩu Thành Công </p>

</div>

<script>
    // Xử lý sự kiện khi nút được click
    document.querySelector('.btn-primary1 button').addEventListener('click', function () {
        // Hiển thị popup
        document.getElementById('popup').style.display = 'block';

       
        setTimeout(function () {
            document.getElementById('popup').style.display = 'none';
        }, 6000);
    });
</script>
